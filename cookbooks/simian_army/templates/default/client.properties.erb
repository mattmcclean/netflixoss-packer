#
## Simian Army Client Configuration File
#
## Dynamically generated by Chef on <%= node['fqdn'] %>
##
## Local modifications will be overwritten by Chef.
##

<% if !node['simian_army']['aws']['secretKey'].nil? %>
simianarmy.aws.secretKey=<%= node['simian_army']['aws']['secretKey'] %>
<% end %>
<% if !node['simian_army']['aws']['account_key'].nil? %>
simianarmy.aws.account_key=<%= node['simian_army']['aws']['account_key'] %>
<% end %>
simianarmy.aws.region=<%= node['simian_army']['aws']['region'] %>
<% if !node['simian_army']['aws']['assumeRoleArn'].nil? %>
simianarmy.client.aws.assumeRoleArn=<%= node['simian_army']['aws']['assumeRoleArn'] %>
<% end %>
